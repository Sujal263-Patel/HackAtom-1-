{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "dev",
			"command": "npm",
			"args": ["run", "dev"],
			"group": "build",
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"problemMatcher": {
				"owner": "nextjs",
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*starting.*",
					"endsPattern": "^.*ready.*|^.*Local:.*"
				}
			}
		}
	]
}
